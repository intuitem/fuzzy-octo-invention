---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Trial',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Trial" title="Start now!" />

  <ContactUs
    title="Free Trial instance"
    subtitle="Get started with a free trial instance of our platform for 90 days. Your data is safe and secure in an isolated environment. Data can be migrated to a production instance at any time."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name*',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email*',
      },
      {
        type: 'text',
        name: 'organization',
        label: 'Organization*',
      },
    ]}
    textarea={{
      label: 'Specific questions or comments',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to our privacy policy and terms & conditions. You also consent to be contacted by us via phone and email. You can unsubscribe at any time.',
    }}
    description="The trial instance will be aviailable shortly after. No credit card required."
    button='Start now'
  />

</Layout>
