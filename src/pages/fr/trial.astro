---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Trial',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Essai" title="Commencer maintenant !" />

  <ContactUs
    title="Instance cloud gratuite"
    subtitle="Démarrer votre essai gratuit dès maintenant. Vos données sont sécurisées sur un environnement isolé. Vous pouvez migrer votre instance vers un environnement de production à tout moment."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nom complet*',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email*',
      },
      {
        type: 'text',
        name: 'organization',
        label: 'Organisation*',
      },
    ]}
    textarea={{
      label: 'Questions ou commentaires',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to our privacy policy and terms & conditions. You also consent to be contacted by us via phone and email. You can unsubscribe at any time.',
    }}
    description="The trial instance will be available shortly after. No credit card required."
    button='Démarrez maintenant'
  />

</Layout>
