---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Trial',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Essai" title="Commencer maintenant !" />

  <ContactUs
    title="Instance cloud gratuite"
    subtitle="Démarrer votre essai gratuit dès maintenant. Vos données sont sécurisées sur un environnement isolé. Vous pouvez migrer votre instance vers un environnement de production à tout moment."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nom complet*',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email*',
      },
      {
        type: 'phone',
        name: 'phone',
        label: 'Téléphone*',
      },
      {
        type: 'text',
        name: 'organization',
        label: 'Organisation*',
      },
    ]}
    textarea={{
      label: 'Questions ou commentaires',
    }}
    disclaimer={{
      label:
        'En soumettant ce formulaire de contact, vous reconnaissez et acceptez notre politique de confidentialité et nos conditions générales. Vous consentez également à ce que nous vous contactions par téléphone et par courrier électronique. Vous pouvez vous désinscrire à tout moment.',
    }}
    description="L'instance d'essai sera disponible dans quelques instants. Aucune carte de crédit n'est requise."
    button='Démarrez maintenant'
  />

</Layout>
